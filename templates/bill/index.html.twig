{% extends 'base.html.twig' %}

{% block title %}Bill index{% endblock %}

{% block body %}
    <h1>Bill index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Base</th>
                <th>Tax</th>
                <th>Number</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>PayAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.id }}</td>
                <td>{{ bill.base }}</td>
                <td>{{ bill.tax }}</td>
                <td>{{ bill.number }}</td>
                <td>{{ bill.description }}</td>
                <td>{{ bill.createdAt ? bill.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.updatedAt ? bill.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ bill.payAt ? bill.payAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_bill_show', {'id': bill.id}) }}">show</a>
                    <a href="{{ path('app_bill_edit', {'id': bill.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bill_new') }}">Create new</a>
{% endblock %}
