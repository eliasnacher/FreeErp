{% extends 'base.html.twig' %}

{% block title %}Hello SetupController!{% endblock %}

{% block body %}
<form action="/setup/save" method="POST">
    Generate an admin password
    <input
        name="password"
        type="password"
        class="bl-input"
    >
    <input
        type="submit"
        class="bl-input bl-button"
    >
    <input
        type="hidden"
        name="_csrf_token"
        value="{{ csrf_token('authenticate') }}"
    >
</form>
{% endblock %}
